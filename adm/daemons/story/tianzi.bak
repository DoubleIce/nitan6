// story:tianzi 天子

#include <ansi.h>

inherit F_CLEAN_UP;

mixed random_gift();

nosave mixed *story = ({
        "某年某月的某一天...",
        "黄帝和炎帝相遇...",
        "黄帝：兄弟，我们都老了！该上仙界了。",
        "炎帝：哦？可咱们这要是一走，那谁来接这天子之位啊？",
        "黄帝：你儿子如何？",
        "炎帝：我儿子？你老傻了，我儿子早死了！还是你儿子来！",
        "黄帝：他？这小子别提多没出息了，他跟张柏芝隐居山林去了，说是不爱江山爱美人！",
        "炎帝：啊？这么风流？真是有其父必有其子！",
        "黄帝：靠，别胡说八道！现在是办公时间，要谈正经事！",
        "炎帝：9494。哎，郁闷！没有接班人我们上不了仙界呀！",
        "黄帝：算了，我看我们随便找一个凑数吧。",
        "炎帝：嗯，只能这么招了。咱们这就去看看有没有合适的人找个来继承这天子之位吧！",
        (: random_gift :),
});

void create()
{
        seteuid(getuid());
}

string prompt() { return HIY "【真命天子】" NOR; }

mixed query_story_message(int step)
{
        return step < sizeof(story) ? story[step] : 0;
}

mixed random_gift()
{
        object *obs;
        object ob;
        string msg;
        mapping my;
        int select;

        select = 0;
        obs = filter_array(all_interactive(), (: ! wizardp($1) &&
                                                 environment($1) &&
                                              //   environment($1)->query("outdoors") &&
                                                 query("gender", $1) == "男性" && 
                                                 !query("special_skill/emperor", $1) && 
                                                 !query("special_skill/lonely", $1) && 
                                                 !query("special_skill/queen", $1) && 
                                                 !query("doing", $1):));
        if (! sizeof(obs))
                return 0;

        ob = obs[random(sizeof(obs))];
        
        if( random(5200-query("kar", ob)*100)>0 )
        {
                msg = HIC "两个装束怪异的老人朝" + ob->name(1) +
                      HIC "仔仔细细端详了半天，最后还是摇摇头走了。" NOR;
                addn("kar", 1+random(2), ob);
                set("kar", 50, if( query("kar", ob) >= 50)ob);

        } else
        {
                msg = HIY "黄帝：我左看又看，" + ob->name(1) +
                      HIY "此人相貌不凡，骨格清奇，确实是继承帝位的不二人选！" NOR;
                set("special_skill/emperor", 1, ob);
                set("special_skill/youth", 1, ob);
                set("per", 40, ob);
                log_file("nosave/tianzi", sprintf("%s(%s) 获得天子属性 at %s.\n",
                         ob->name(1),query("id", ob),ctime(time())));
                select = 1;

        }
        remove_call_out("announce");
        call_out("announce",1,select,ob);
        return msg;
}

void announce(int select, object ob)
{
      if (select == 0 )
      CHANNEL_D->do_channel(this_object(), "rumor",
         "听说炎、黄二帝寻找真命天子无功而返,但给" + ob->name() + "加了福缘。\n");
      else
      CHANNEL_D->do_channel(this_object(), "rumor",
           "听说" + ob->name() + "被炎、黄二帝选中，荣登真命天子之位。\n");
}
