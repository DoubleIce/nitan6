int look_reverso(string arg)
{
        string *ren, msg = HIC + "\n参加本届武林盛会的高手有：\n" + NOR;
        object ob;
        int i;

        if (arg == "reverso")
        {
            if (query("baoming"))
            {
                ren = keys(query("baoming"));
                for (i = 0; i < sizeof(ren); i++)
                {
                     ob = find_player(ren[i]);
                     if (objectp(ob))
                          msg+=query("name", ob)+"("+ren[i]+")"+"\n";
                     else
                          msg += ren[i] + "\n";
                }
                this_player()->start_more(msg);
            }
            else
                write("目前还没有人报名参赛。\n");
            return 1;
        }
        return 0;
}
